<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <!-- <meta name="viewport" content="width=device-width, initial-scale=1.0" /> -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <title>Replayzer</title>
    <style>
      body {
        background-color: #1e1424;
      }
      .back {
        display: flex;
        flex-direction: column;
        justify-content: center;
      }
      .box {
        width: 100%;
      }
      .cinema {
        width: 100%;
        height: 75vh;
        background-color: white;
        border: none; 
      }
      .inputWrapper{
        display: flex;
      }
      #eachComment{
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 20px;
        /* margin: 10px; */
        padding: 5px;
      }
      #nickLine{
        font-size: 30px;
      }
      #dateLine{
        margin-top: 5px;
        font-size: 15px;
        font-style: italic;
      }
      #deleter {
        font-size: 15px;
        cursor: pointer;
      }
      #content {
        border: none;
        padding: 0px; 
        height: 100px; 
        width: 100%; 
        resize: none;
      }
      #content:focus{
        outline:none;
      }
    </style>
  </head>
  <body>
    <div class="back">
      <div class="logoPlace">
        <a href="/">
          <img
            src="https://i.imgur.com/RHi1T2Q.png"
            style="width: 120px; height: 100px"
          />
        </a>
      <div class="box"><iframe src='/replayShow' class="cinema"></iframe></div>
    </div>
    <br/>
    <div><h1 id="commentNum" style="color: white">댓글</h1></div>
    <ul style="margin: 0px; padding: 0px; list-style: none" id="commentList"></ul>
    <div style="width: 50%">
      <div style="width: 100%; display: flex; justify-content: space-between;" class="inputWrapper">
        <input id="nick" style="width:40%" placeholder="닉네임" type="text">
        <input id="pw" style="width:40%" placeholder="****" type="password">
        <button onclick="comment()" style="width:20%">작성</button>
      </div>
      <textarea id="content"></textarea>
    </div>
    <script>

      axios({
        method: "get",
        url : `/getComments/${window.location.pathname.split("/")[2]}`
      }).then((res)=> {
        let commentNum = document.querySelector("#commentNum");
        commentNum.innerText = commentNum.innerText + " " + res.data.data.length;
        let commentList = document.querySelector("#commentList");
        for(let i = 0; i < res.data.data.length; i++){
          let li = document.createElement("li");
          let liner = document.createElement("hr");
          let box = document.createElement("div");
          let nickLine = document.createElement("div");
          let dateLine = document.createElement("span");
          let deleter = document.createElement("span")
          nickLine.id = "nickLine";
          dateLine.id = "dateLine";
          deleter.id = "deleter";
          let contentLine = document.createElement("div");
          nickLine.innerText = res.data.data[i].nick;
          contentLine.innerText = res.data.data[i].content;
          let timeFixer = +res.data.data[i].createdAt.slice(11, 13);
          timeFixer = "" + ((timeFixer+9) % 24);
          if(timeFixer.length == 1) timeFixer = "0" + timeFixer;
          dateLine.innerText = res.data.data[i].createdAt.slice(0, 10) + " " + timeFixer + res.data.data[i].createdAt.slice(13, 16) + " ";
          deleter.innerText = "삭제";
          deleter.onclick = () => {
            commentDelete(res.data.data[i].id ,res.data.data[i].pw)
          }
          box.appendChild(nickLine);
          box.appendChild(contentLine);
          box.appendChild(dateLine);
          box.appendChild(deleter);
          li.appendChild(box);
          li.id = "eachComment";
          commentList.appendChild(li);
          commentList.appendChild(liner);
        }
      })

      const comment = async () => {
        let nick = document.querySelector("#nick");
        let pw = document.querySelector("#pw");
        let content = document.querySelector("#content");
        if(content.value){
          let res = await axios({
            method: "post",
            url: '/commentAdd',
            data: {
              nick: nick.value ? nick.value : "ㅇㅇ", 
              pw : pw.value ? pw.value : "0000", 
              content: content.value,
              pageid: +window.location.pathname.split("/")[2]
            }
          })
          if(res.data.status == "성공") window.location.reload();
        }else{
          alert("내용을 입력해주세요");
        }
      }

      const commentDelete = async (id, pw) => {
        let insertedPW = window.prompt("비밀번호를 입력해주세요");
        if(insertedPW == pw){
          let res = await axios({
            method: "post",
            url: "/commentSub",
            data: {
              commentId : id
            }
          })
          if(res.data.status == "성공"){
            alert("댓글을 삭제했습니다");
            window.location.reload();
          }
        }else{
          alert("비밀번호가 맞지 않습니다")
        }
      }
    </script>
  </body>
</html>
